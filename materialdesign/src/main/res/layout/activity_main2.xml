<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aaa.test.materialdesign.Main2Activity">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_main2_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:src="@android:drawable/ic_dialog_email" />

    <!--        app:layout_anchor="@id/recyclerView"
        app:layout_anchorGravity="bottom|right|end"
        app:layout_behavior="@android:" -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_main2_appear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="top|end"
        android:layout_margin="20dp"
        android:src="@mipmap/tab_session_normal"
        app:backgroundTint="#7777ff"
        app:elevation="100dp"
        app:pressedTranslationZ="100dp"
        app:rippleColor="#0000ff" />
</RelativeLayout>
