<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.aaa.test.materialdesign.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_tie_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/text_hint"
        app:errorEnabled="true"
        app:errorTextAppearance="@drawable/ic_menu_camera"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiet_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_et_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/text_hint"
        android:layout_below="@id/til_tie_test"
        app:counterEnabled="true"
        app:counterTextAppearance="@style/counter"
        app:counterMaxLength="8"
        app:counterOverflowTextAppearance="@style/counterOverflow"
        >
        <EditText
            android:id="@+id/et_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </android.support.design.widget.TextInputLayout>

    <!--<android.support.v7.widget.RecyclerView
        android:id="@+id/rv_test"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>-->
</RelativeLayout>
